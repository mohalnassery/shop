<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow sell-form">
      <div class="card-body">
        <%= simple_form_for @product do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :title, input_html: { class: 'form-control' } %>
            <%= f.input :description, input_html: { class: 'form-control', rows: 5 } %>
            <%= f.input :price, input_html: { class: 'form-control' } %>
            <div class="elements">
            <%= f.association :category, prompt: "Choose a category", input_html: { class: 'form-control' } %>
            <%= f.input :brand, collection: Product::BRAND, input_html: { class: 'form-control' } %>
                        </div>
            <%= f.input :model, input_html: { class: 'form-control' } %>
            <div class="elements">
            <%= f.input :condition, collection: Product::CONDITION, input_html: { class: 'form-control' } %>
            <%= f.input :finish, collection: Product::FINISH, input_html: { class: 'form-control' } %>
                                    </div>
            <%= f.input :image, input_html: { class: 'form-control-file' } %>
          </div>

          <div class="form-actions mt-4">
            <%= f.button :submit, class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
