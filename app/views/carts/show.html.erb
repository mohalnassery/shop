<h1>Your Shopping Cart</h1>

<% if @cart.cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= item.product.title %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.product.price) %></td>
          <td><%= number_to_currency(item.quantity * item.product.price) %></td>
          <td>
            <%= button_to 'Remove', remove_item_cart_path(item), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3"><strong>Total:</strong></td>
        <td><%= number_to_currency(@cart.total_price) %></td>
        <td></td>
      </tr>
    </tfoot>
  </table>

  <%= button_to 'Empty Cart', empty_cart_path, method: :delete, data: { confirm: 'Are you sure you want to empty your cart?' } %>
<% end %>

<%= link_to 'Continue Shopping', products_path %>