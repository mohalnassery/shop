<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Your Shopping Cart</h1>
            <%= link_to products_path, class: 'btn btn-outline-primary' do %>
              <i class="fas fa-arrow-left me-2"></i>Continue Shopping
            <% end %>
          </div>

          <% if @cart&.cart_items&.empty? %>
            <div class="text-center py-5">
              <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
              <p class="lead text-muted">Your cart is empty</p>
              <%= link_to 'Start Shopping', products_path, class: 'btn btn-primary' %>
            </div>
          <% else %>
            <div class="table-responsive">
              <table class="table align-middle">
                <thead class="table-light">
                  <tr>
                    <th scope="col">Product</th>
                    <th scope="col" class="text-center">Quantity</th>
                    <th scope="col" class="text-end">Price</th>
                    <th scope="col" class="text-end">Subtotal</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @cart.cart_items.each do |item| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <% if item.product.image.attached? %>
                            <%= image_tag item.product.image, class: 'rounded me-3', style: 'width: 50px; height: 50px; object-fit: cover;' %>
                          <% else %>
                            <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                              <i class="fas fa-image text-muted"></i>
                            </div>
                          <% end %>
                          <%= link_to item.product.title, product_path(item.product), class: 'text-decoration-none' %>
                        </div>
                      </td>
                      <td class="text-center">
                        <%= form_for [:cart, item], html: { class: 'd-inline-flex align-items-center' } do |f| %>
                          <%= f.number_field :quantity, value: item.quantity, min: 1, 
                              class: 'form-control form-control-sm text-center', 
                              style: 'width: 70px;',
                              onchange: 'this.form.submit()' %>
                        <% end %>
                      </td>
                      <td class="text-end"><%= number_to_currency(item.product.price) %></td>
                      <td class="text-end"><%= number_to_currency(item.quantity * item.product.price) %></td>
                      <td class="text-end">
                        <%= button_to remove_item_cart_path(item), 
                            method: :delete,
                            class: 'btn btn-link text-danger p-0',
                            form: { data: { turbo_confirm: 'Are you sure you want to remove this item?' } } do %>
                          <i class="fas fa-trash"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
                <tfoot>
                  <tr class="table-light">
                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                    <td class="text-end"><strong><%= number_to_currency(@cart.total_price) %></strong></td>
                    <td></td>
                  </tr>
                </tfoot>
              </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
              <%= button_to empty_cart_path, 
                  method: :delete,
                  class: 'btn btn-outline-danger',
                  form: { data: { turbo_confirm: 'Are you sure you want to empty your cart?' } } do %>
                <i class="fas fa-trash-alt me-2"></i>Empty Cart
              <% end %>

              <%= button_to '#', class: 'btn btn-primary' do %>
                <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
